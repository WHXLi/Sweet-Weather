<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="365dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@mipmap/search"
        android:contentDescription="@string/city_search"
        app:layout_constraintBottom_toBottomOf="@+id/search_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_city" />

    <EditText
        android:id="@+id/search_city"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:autofillHints="@string/city_search"
        android:background="@drawable/border_bottom"
        android:hint="@string/city_search"
        android:inputType="text"
        android:paddingStart="50dp"
        android:paddingEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <Button
        android:id="@+id/city1_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city2_link"
        app:layout_constraintEnd_toStartOf="@+id/city6_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_city" />

    <Button
        android:id="@+id/city2_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city3_link"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city1_link" />

    <Button
        android:id="@+id/city3_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city4_link"
        app:layout_constraintEnd_toStartOf="@+id/city8_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city2_link" />

    <Button
        android:id="@+id/city4_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city5_link"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city3_link" />

    <Button
        android:id="@+id/city5_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city4_link" />

    <Button
        android:id="@+id/city6_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city7_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@+id/search_city" />

    <Button
        android:id="@+id/city7_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city8_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@+id/city6_link" />

    <Button
        android:id="@+id/city8_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city9_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@+id/city7_link" />

    <Button
        android:id="@+id/city9_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/city10_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@+id/city8_link" />

    <Button
        android:id="@+id/city10_link"
        style="@style/Widget.AppCompat.ActionButton.Overflow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/city_name"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@+id/city9_link" />


</androidx.constraintlayout.widget.ConstraintLayout>